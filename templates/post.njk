---
layout: base.njk
permalink: /post/{{ p.slug }}/
pagination:
  alias: p
  data: posts
  size: 1
---
{% from 'theme.njk' import theme %}

<div data-router-view="default" {{ theme() }}>
  {% if p.type == 'caseStudy' %}
    {% include 'header.njk' %}
    <div data-content>
      {% include 'caseStudy.njk' %}
      {% include 'footer.njk' %}
    </div>
  {% elif p.type == 'media' %}
    <div data-content>
      {% include 'modal.njk' %}
    </div>
  {% endif %}
</div>